
<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	 <springProperty name="LOG_DIR" source="logging.path" /> 
	<!--<springProperty scope="context" name = "path" source="logging.path" />-->
	<!-- <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"> 
		<layout class="ch.qos.logback.classic.PatternLayout"> <Pattern> %-5level 
		| %d{yyyy-MM-dd} [%thread] %logger{36} - %msg%n </Pattern> </layout> </appender> -->
	<appender name="PDT_INFO"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_DIR}/info.log</file>
		<append>true</append>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>INFO</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<encoder
			class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>
				%-5level | %d{yyyy-MM-dd HH:mm:ss} [%thread] %logger{36} - %msg%n
			</Pattern>
		</encoder>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${LOG_DIR}/info-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<!-- Set the file size limit for rolling -->
			<maxFileSize>10MB</maxFileSize>
			<!-- Set the maximum number of archived log files to keep -->
			<maxHistory>50</maxHistory>
		</rollingPolicy>
	</appender>
	<appender name="PDT_ERROR"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_DIR}/ERROR.log</file>
		<!--filter class="ch.qos.logback.classic.filter.ThresholdFilter"> <level>ERROR</level> 
			</filter -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<encoder
			class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>
				%-5level | %d{yyyy-MM-dd HH:mm:ss} [%thread] %logger{36} - %msg%n
			</Pattern>
		</encoder>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${LOG_DIR}/ERROR-%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<!-- Set the file size limit for rolling -->
			<maxFileSize>10MB</maxFileSize>
			<!-- Set the maximum number of archived log files to keep -->
			<maxHistory>5</maxHistory>
		</rollingPolicy>
	</appender>

	<!--additivity=false ensures this log data only goes to the this log, and 
		no one more -->
	<logger name="root" level="INFO" additivity="false">
		<appender-ref ref="PDT_ERROR" />
		<appender-ref ref="PDT_INFO" />
	</logger>
</configuration>
